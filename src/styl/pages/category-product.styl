@import '../global-variables';

#category-product {
    @import '../globals-sections/intro-page-header';

    #intro-page-header {
        @media screen and (min-width: desktop-min) {
            background: url('../../imgs/banner/header-category.jpg');
        }

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            background: url('../../imgs/banner/header-category-mob.jpg');
            margin-bottom: 21px;
            height: 157px;
        }
    }

    #content-page-category {
        margin-bottom: 63px;

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            margin-bottom: 40px;
        }

        .content {
            @media screen and (min-width: desktop-min) {
                display: flex;
                gap: 36px;
            }

            .aside-category {
                width: 208px;
                height: fit-content;
                position: sticky;
                top: 139px;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    display: none;
                }

                .title {
                    font-size: 24px;
                    line-height: 27px;
                }

                .list {
                    list-style: none;
                    padding-left: 0px;

                    .fa {
                        font-size: 12px;
                        color: #5D5D5D;
                    }

                    li {
                        transition: transform 0.2s; /* Animation */

                        &:hover {
                            background: tertiaryColor;
                            background: rgb(255, 203, 100);
                            background: linear-gradient(90deg, rgba(255, 203, 100, 1) 0%, rgba(255, 235, 195, 1) 46.8%, rgba(255, 203, 100, 1) 100%);
                            transform: scale(1.1); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */

                            a {
                                font-weight: weight-strong;
                            }
                        }

                        a {
                            font-size: 15px;
                            color: #5D5D5D;
                            border-bottom: 1px solid #D5D5D5;
                            padding-left: 9px;
                            padding-bottom: 10px;
                            padding-top: 10px;
                            display: flex;
                            align-items: center;
                            gap: 3px;
                        }

                        .strong-link {
                            font-weight: weight-strong;
                            color: primaryColor;

                            i {
                                color: primaryColor;
                            }
                        }
                    }
                }
            }

            .content-products {
                width: 896px;
                display: flex;
                gap: 24px;
                justify-content: flex-start;
                flex-wrap: wrap;
                align-self: flex-start;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    width: 100%;
                }

                a {
                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        width: 100%;
                    }
                }

                .card-product {
                    width: 206px;
                    height: 340px;
                    background: #fff;
                    border: 1px solid #ddd;
                    text-align: center;
                    position: relative;
                    transition: transform 0.2s; /* Animation */
                    padding-left: 10px;
                    padding-right: 10px;
                    padding-top: 19px;

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        width: 100%;
                    }

                    &:hover {
                        transform: scale(1.1); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */

                        .button {
                            background: linear-gradient(90deg, #eda10a 0%, #ffebc3 50%, #eda10a 100%);
                            color: primaryTextColor;
                            transform: scale(1.1);
                        }
                    }

                    .img-product {
                        height: 156px;
                        width: 100%;
                        object-fit: contain;
                        margin: 0 auto;
                        margin-bottom: 9px;
                    }

                    .title {
                        font-weight: weight-normal;
                        font-size: 18px;
                        width: 100%;
                    }

                    .title-before {
                        width: 81px;
                    }

                    .button-primary {
                        position: absolute;
                        bottom: 11px;
                        width: 184px;
                        left: 0;
                        right: 0;
                        margin: auto;
                    }
                }
            }
        }
    }

    @import '../globals-sections/section-contact-module';
    @import '../globals-sections/section-galeria';
    @import '../globals-sections/section-contact';
}