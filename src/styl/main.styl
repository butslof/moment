@import './global-variables';
@import './typography';

body {
  overflow-x: hidden !important;
  max-width: max-layout;
  margin: 0 auto;
}

.grecaptcha-badge {
  z-index: 9999 !important;
}

/* width */
::-webkit-scrollbar {
  width: 9px;
  border-radius: 10px;
}

/* Track */
::-webkit-scrollbar-track {
  background: lightGray;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: primaryColor;
  border-radius: 10px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #555;
}

html {
  scroll-behavior: smooth;
}

.container {
  max-width: grid-container-desktop;
}

a {
  text-decoration: none !important;

  &:hover {
    color: secondaryColor;
    transition: 1s;

    i {
      color: secondaryColor;
      transition: 1s;
    }
  }
}

.searchwp-live-search-result {
  a {
    color: primaryColor;
  }
}

.was-validated .form-control:invalid {
  border-color: #dc3545 !important;
}

.row-intro {
  margin-bottom: 20px;
}

.button {
  width: 196px;
  height: 45px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: branco;
  font-weight: weight-strong;
  border: none; /* Small only */
  font-family: 'Philosopher', sans-serif !important;
  font-size: 18px;

  // transition: 1s;
  &:hover {
    transition: 1s;
    color: branco;
    border: none !important;

    * {
      color: branco;
    }
  }

  @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
    margin: 0 auto;
    width: 76%;
  }

  * {
    color: branco;
  }

  i {
    margin-right: 8px;
    font-size: 20px;
  }

  img, svg {
    margin-left: 10px;
  }
}

.button-primary {
  // background-color: tertiaryColor;
  color: primaryTextColor;
  background: rgb(255, 203, 100);
  background: linear-gradient(90deg, rgba(255, 203, 100, 1) 0%, rgba(255, 235, 195, 1) 46.8%, rgba(255, 203, 100, 1) 100%);
  transition: transform 0.2s; /* Animation */

  &:hover {
    background: linear-gradient(90deg, #eda10a 0%, #ffebc3 50%, #eda10a 100%);
    color: primaryTextColor;
    transform: scale(1.1); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
  }
}

.btn-no-width {
}

.button-blue {
  background-color: primaryColor;

  &:hover {
    transition: 1s;
    background: linear-gradient(90deg, rgba(33, 140, 154, 1) 0%, rgba(93, 197, 209, 1) 100%);
  }
}

.button-green {
  background-color: secundaryColor;

  &:hover {
    transition: 1s;
    background: linear-gradient(90deg, rgba(33, 140, 154, 1) 0%, rgba(93, 197, 209, 1) 100%);
  }
}

.button-whatsapp {
  background-color: #38D072;

  &:hover {
    background: #299a54;
    color: branco;

    * {
      color: branco;
    }
  }

  i {
    font-size: 26.72px;
    margin-right: 5px;
  }
}

.button-flex {
  gap: 24px;
  display: flex; /* Small only */

  @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-top: 18px;
  }
}

.bg-gray {
  background-color: #F4F4F4;
}

#breadcrumb {
  /* Large and up */
  @media screen and (min-width: desktop-min) {
    margin-bottom: 44px;
    margin-top: 30px;
  }

  @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
    text-align: left;
    padding-left: 25px;
    margin-bottom: 31px;
  }

  a {
    color: #909090;
  }

  span {
    color: #909090;
  }

  .breadcrumb_last {
    color: primaryColor;
  }

  * {
    font-weight: weight-strong;
    text-transform: uppercase;
  }
}

input, textarea, select {
  margin-bottom: 10px;
  border: 1px solid #C8C8C8 !important;
  border-radius: 0px !important;
  color: primaryTextColor !important;
  margin: 0;
}

input, select {
  height: 45px !important;
  // margin-right 10px
}

textarea {
  width: 100%;
  height: 91px;
  padding-top: 17px !important;
}

form {
  position: relative;

  input {
    padding-left: 19px !important;
  }

  div {
    position: relative;

    @media screen and (min-width: desktop-min) {
      margin: 5px;
      padding: 0 !important;
    }
  }

  label {
    position: absolute;
    margin-top: 8px;
    left: 0;

    @media screen and (min-width: desktop-min) {
      margin-left: 12px;
    }

    /* Small only */
    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
      left: 21px;
    }
  }

  input, select textarea {
    /* Small only */
    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
      margin-bottom: 9px;
    }
  }
}

.link-privacy {
  font-size: 12px;
  line-height: 17px;
  color: branco !important;

  a {
    color: branco !important;
    text-decoration: underline !important;
    font-size: 12px;
    line-height: 17px;
  }
}

.strong {
  font-weight: weight-strong !important;
}

.margin-0-auto {
  margin: 0 auto;
}

.p-centered {
  max-width: 577px;
}

.line-centered {
  align-items: center;
}

.splide__pagination__page.is-active {
  background-color: primaryColor !important;
  transform: scale(1.1) !important;
}

.splide__pagination__page {
  background-color: transparent !important;
  border: 1px solid primaryColor !important;
}

.splide__pagination__page {
  height: 13px !important;
  width: 13px !important;
  opacity: inherit !important;
}

.bg-light-blue {
  background-color: lightBlue;
}

.redes-social-icon {
  background-color: secundaryColor;
  color: branco;
  padding: 5px;
}

.row-intro {
  .title-before {
    margin-top: 15px;
    margin-bottom: 19px;
  }
}

/* Small only */
@media screen and (min-width: mobile-min) and (max-width: tablet-max) {
  .grecaptcha-badge {
    bottom: 76px !important;
  }

  body {
    text-align: center;
  }

  .container {
    max-width: grid-container-mobile !important;
  }

  .img-mob-fluid {
    margin-top: 23px;
    margin-bottom: 23px;
  }

  .card-none {
    display: none !important;
  }

  #iframe-sz-chat {
    bottom: 77px !important;
  }

  .card-none {
    display: none;
  }
}

