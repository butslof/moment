#modalOrcamento {
    .modal-body {
        padding: 0;
    }

    .modal-content {
        height: 464px;
        border: none;
        border-radius: 8px;
    }

    .btn-close {
        padding: 0.5rem 0.5rem;
        margin: -0.5rem -0.5rem -0.5rem auto;
        position: absolute;
        right: 17px;
        top: 9px;
        background: none;
        opacity: inherit;

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            right: 15px;
            top: 4px;
        }
    }

    .box-form {
        width: 118%;
        height: 464px;
        background: #008d9a;
        border-radius: 5px;
        float: right;
        padding-left: 44px;
        padding-right: 44px;
        padding-top: 26px;
        background-position: center top;
        background-size: 100%;
        background-repeat: no-repeat;

        @media screen and (min-width: desktop-min) {
            background-image: url('../imgs/form-bg.jpg');
        }

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            height: auto !important;
            margin-top: 0px;
            padding-left: 15px;
            padding-right: 15px;
            background-image: url('../imgs/form-bg-mob.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            padding-bottom: 46px;
            width: 100%;
        }

        .title {
            font-size: 30px;
            color: branco;
            line-height: 35px;

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                font-size: size-title-large-mob;
                line-height: 25px;
            }
        }

        p {
            color: branco;
        }

        form {
            div {
                @media screen and (min-width: desktop-min) {
                    margin: 0;
                    gap: 10px;
                    margin-bottom: 5px;
                }

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    margin-bottom: 5px;
                }
            }

            textarea {
                height: 71px;
            }

            .link-privacy {
                float: left;
                width: 218px;
                margin-top: 10px;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    margin: 0 auto;
                    float: none;
                    margin-bottom: 13px;
                }

                a {
                    color: branco !important;
                }
            }

            .button {
                float: right;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    float: none;
                    width: 100%;
                    height: 45px;
                }
            }
        }
    }
}