.col-card-product.no-bg {
    .bg {
        background: white !important;
    }

    .card-produto {
        background: #F4F4F4;
        position: relative;
    }

    .link {
        width: 100%;
        height: 48px;
        border-radius: 0px 0px 5px 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        left: 0;
        position: absolute;
        color: branco !important;
        gap: 9px;
        position: absolute;
        bottom: 0 !important;
        background: linear-gradient(90deg, rgba(33, 140, 154, 1) 0%, rgba(93, 197, 209, 1) 100%);
    }
}

.card-produto {
    width: 273px;
    height: 378px;
    border-radius: 5px;
    background: #fff;
    box-shadow: 0px 13px 26px rgba(0, 0, 0, 0.16);
    position: relative;
    margin-bottom: 26px;

    &:hover {
        transition: transform 1s;
        transform: scale(1.1);
    }

    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
        margin: 0 auto;
        margin-bottom: 20px;
        text-align: left;
        width: 145px;
        height: 180px;
        text-align: center;
    }

    .bg {
        background: url('../imgs/bg-product.jpg');
        background-repeat: no-repeat;
        height: 157px;
        margin-bottom: 25px;
        width: 100%;
        display: flex;
        align-items: center;

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            height: 84px;
            background-size: cover;
            margin-bottom: 11px;
        }
    }

    .button {
        width: 100% !important;
        position: absolute;
        bottom: 0;
    }

    .img-produto {
        height: 139px;
        width: 100%;
        object-fit: contain;

        // margin-bottom: 17px;
        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            height: 84px;
            object-fit: contain;
        }
    }

    .content-text {
        padding-left: 21px;
        padding-right: 21px;

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            padding-left: 10px;
            padding-right: 10px;
        }

        .title {
            font-size: 21px;
            font-weight: weight-strong;
            color: primaryColor;

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                font-size: 16px;
                line-height: 17px;
            }
        }

        p {
            font-size: 12px;
            line-height: 20px;
        }

        .link {
            font-weight: weight-strong;
            color: primaryColor;
            position: absolute;
            bottom: 20px;
            transition: transform 1s;

            &:hover {
                transition: transform 1s;
            }

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                width: 100%;
                height: 28px;
                border-radius: 3px;
                background: linear-gradient(#5dc5d1 0%, #218c9a 100%);
                // display: block;
                color: branco;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            img {
                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    height: 13.55px;
                    margin-top: 3px;
                    margin-left: 3px;
                }
            }
        }
    }
}

#navegue-por-categoria {
    .card-produto {
        .content-text {
            .link {
                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    position: initial;
                }
            }

            .title {
                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    height: 34px;
                }
            }
        }
    }
}