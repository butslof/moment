.card-section-blog 
    width 296px
    height 430px
    border-radius 10px
    background #fff
    box-shadow 0px 13px 26px rgba(0, 0, 0, 0.16)  
    margin 0 auto 
 
    /* Small only */ 
    @media screen and (min-width: mobile-min) and (max-width: tablet-max)   
        width 100% 
        margin-bottom 20px 
        height auto 
        padding-bottom 26px
    &:hover 
        transition transform 1s
        transform scale(1.1) 

    img 
        width 100% 
        height 198px 
        object-fit cover  
        border-top-right-radius 10px 
        border-top-left-radius 10px

        /* Small only */ 
        @media screen and (min-width: mobile-min) and (max-width: tablet-max)   
            height 180px 
    .content 
        padding 18px
        /* Small only */ 
        @media screen and (min-width: mobile-min) and (max-width: tablet-max) 
            text-align left
        .title 
            font-size 18px 
            font-weight weight-strong 
            line-height 28px 
            color primaryGrayColor  
            /* Small only */ 
            @media screen and (min-width: mobile-min) and (max-width: tablet-max)
                font-size 16px 
                line-height 25px
        p 
            font-size 14px  
            line-height 24px
        .btn-link 
            color primaryColor 
            font-weight weight-strong
            text-decoration none 
            display block
            margin-top -11px 