#form-sticky 
    background-color primaryColor 
    padding 29px
    position sticky
    top 160px 
    margin-top 85px
    @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
        margin-top 0px
        border-radius 5px 
        margin-bottom 29px
    .title 
        font-size 24px 
        line-height 35px 
        font-weight weight-strong
        color branco 
        text-align center 
        margin-bottom 15px
        @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
            line-height 30px
        span 
            font-size 46px 
            color secundaryColor 
            font-weight weight-strong
            @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
                font-size 32px

    form 
        div
            margin initial
            padding initial
            margin-bottom 8px 
        input 
            height 40px !important 
        textarea 
            height 115px !important 
        .button  
            width 100% 
            text-align center 
            i 
                font-size 20.53px 
                margin-left 4px