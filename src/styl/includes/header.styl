            background-color: transparent;
        }

        .dropdown-toggle:not(.collapsed) {
            .fa {
                transform: rotate(90deg);
            }
        }

        .divisor-link-nav {
            display: none !important;
        }

        .dropdown-menu, .dropdown-menu-sub {
            border: none !important;
            background-color: transparent;
            padding-left: 13px;
        }

        .logo-header {
            z-index: 999;
            position: absolute;
            left: 15px;
            margin-top: -19px;
            width: 129px;
            height: auto;
        }

        .navbar {
            .navbar-nav {
                margin-top: -6px;
                position: revert !important;
                text-align: left !important;
                height: auto;

                a {
                    font-size: 14px;
                    color: white;
                }

                .nav-link {
                    font-weight: weight-semibold;
                    margin-bottom: 0px;
                    font-size: 18px;
                    color: branco;
                }

                .button {
                    margin-bottom: 10px;
                }

                .nav-item {
                    margin-top: 10px;
                }

                .dropdown {
                    margin-top: 10px;

                    .dropdown-item {
                        font-weight: weight-medium;
                    }
                }

                .sub-box-drop {
                    padding-left: 11px;

                    .bullet {
                        color: secundaryColor;
                    }
                }
            }

            .box-infos {
                font-size: 14px;
                margin-top: 35px;

                * {
                    font-size: 14px !important;
                    color: primaryTextColor !important;
                }

                .box {
                    margin-bottom: 21px;
                }

                .box a {
                    color: branco !important;
                    font-weight: weight-strong;
                    font-size: 16px;
                }

                .box, a {
                    img {
                        margin-right: 7px;
                    }
                }

                .name-endereco {
                    display: flex;

                    .title-end {
                        font-size: 16px;
                        font-weight: weight-strong;
                        color: primaryColor !important;
                    }
                }
            }

            .title-redes {
                font-weight: weight-normal;
                margin-bottom: 8px;
                display: block;
            }

            .box-redes {
                display: flex;
                gap: 10px;
                margin-bottom: 28px;
                justify-content: center;
                color: branco !important;
                font-size: 16px !important;

                a {
                    border-radius: 3px;
                    width: 30px;
                    height: 30px;
                    display: flex;
                    align-items: center;
                    justify-content: center;

                    i {
                        color: branco;
                    }
                }
            }
        }

        .hamb {
            width: 26px;
            height: 21px;
            position: absolute;
            top: 2px;
            bottom: 0;
            right: 22px;
            margin: auto;
            z-index: 9999;
            margin-top: 20px;

            &:before {
                content: '';
                width: 100%;
                height: 3px;
                background: branco;
                box-shadow: 0 9px 0 0 branco, 0 18px 0 0 branco;
                display: block;
                transition: 0.3s all;
            }

            &:after {
                content: '';
                width: 3px;
                height: 3px;
                position: absolute;
                bottom: 0;
                left: 5px;
                background: branco;
                transition: 0.3s all;
            }

            &.open-hamb {
                display: flex;
                align-items: center;

                &:before {
                    transform: rotate(45deg);
                    box-shadow: unset;
                    background: branco;
                }

                &:after {
                    width: 100%;
                    left: 0;
                    top: 0;
                    bottom: 0;
                    margin: auto;
                    transform: rotate(-45deg);
                    background: branco;
                }
            }
        }

        #nav-menu-container {
            padding: 0px;
        }

        .container-menu-aberto {
            background: transparent;
            display: block !important;
            position: absolute;
            width: 100%;
            left: 0;
            height: 100vh;
            transition: 0.5s all;
            top: 0;
            padding: 0;

            .proinput {
                form {
                    width: 100%;
                    margin: 0 auto;
                    margin-top: 65px;
                    padding-left: 14px;
                    padding-right: 18px;

                    button {
                        right: 33px !important;
                    }
                }
            }

            nav {
                height: inherit;
                background: #222222;
                transition: 0.3s all;
                max-width: 100%;
                padding-top: 52px;
                padding-left: 0px;
                overflow: auto;
                margin-top: 4px;

                ul {
                    display: block !important;
                }

                .box-redes-sociais-header {
                    left: 9px;
                }
            }

            .navbar-collapse {
                position: absolute !important;
                top: 20px;
                margin-left: 15px;
            }

            .navbar-collapse {
                display: block !important;
            }

            #navbarNav {
                width: 90%;
            }

            .final-mob {
                margin-top: 49px;
                padding-left: 20px;
                padding-right: 20px;
                margin-bottom: 29px;

                p {
                    color: branco;
                    font-weight: bold;

                    strong {
                        color: branco;
                    }
                }

                .box-contatos {
                    a {
                        display: flex;
                        font-size: 14px;
                        color: branco;
                        margin-bottom: 16px;
                        gap: 9px;

                        i {
                            font-size: 20px;
                            color: primaryColor;
                        }
                    }
                }
            }
        }
    }

    /* Large and up */
