    }

    .line-header {
        height: 1px;
        color: #333333;
        background: #4e4d4d;
        z-index: 1;
        position: relative;
        margin-top: -16px;
    }

    .faixa-top {
        background-color: primaryColor;
        padding-bottom: 8px;
        padding-top: 8px;
        margin-bottom: 20px;

        // border-bottom: solid 1px;
        .column-items {
            display: flex;
            justify-content: space-between;

            * {
                color: branco;
            }

            a {
                font-size: 16px;

                i {
                    font-size: 16px;
                    margin-right: 4px;
                    color: branco;
                    vertical-align: baseline;
                }
            }
        }

        .box-left {
            display: flex;
            gap: 10px;
            width: 36%;
        }

        .box-right {
            a {
                // margin-left: 58px;
                font-size: 16px;
            }

            .separador {
                margin-left: 22px;
                margin-right: 22px;
            }

            .phone-right-button {
                margin-right: 25px;
            }
