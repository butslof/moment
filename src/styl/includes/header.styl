    .dropdown-toggle {
        i {
            color: primaryColor;
            vertical-align: middle;
        }
    }

    .dropdown-toggle::after {
        border: none;
        position: absolute;
        margin-top: -1px;
        color: tertiaryColor !important;
    }

    #multiCollapseExample1 {
        position: absolute;
        margin-top: 18px;
        margin-left: -82px;
    }

    .dropdown-divider {
        margin: 0 !important;
    }

    .navbar-nav li:hover .dropdown-menu {
        display: block;
    }

    .dropdown-menu .dropdown-menu-sub {
        background-color: branco;
        transition: 1s !important;
    }

    .dropdown-menu-sub {
        position: absolute;
        left: 100%;
        min-height: 188px;
        position: absolute;
        top: -44px;
    }

    .dropdown .dropdown-menu-sub {
        display: none;
    }

    .dropdown:hover>.dropdown-menu-sub, .dropend:hover>.dropdown-menu-sub {
        display: block;
        margin-top: 0.125em;
        margin-left: 0.125em;
    }

    .dropdown-toggle::after {
        color: secundaryColor !important;
    }

    .dropdown-item {
        padding-left: 12px !important;
        padding-right: 12px !important;
        margin-left: 0px !important;
        font-size: 12px;
        color: primaryTextColor;
        font-weight: 400;
        margin-bottom: 0px;

        i {
            font-size: 11px;
            color: secundaryColor;
        }
    }

    .dropdown-toggle i {
        font-size: 11px;
    }

    .navbar {
        .navbar-nav {
            position: absolute;
            right: -31px;
            margin-top: -55px;

            .nav-link {
                font-size: 18px;
                font-family: 'Philosopher', sans-serif !important;
                color: branco;
                font-weight: weight-strong;
                margin-right: 17px;
                padding-right: 11px !important;
                padding-left: 6px !important;
                text-transform: uppercase;
                border-radius: 0;
                height: 37px;
                margin-top: 4px;
                gap: 2px;
                line-height: 22px;

                &:hover {
                    color: tertiaryColor;
                }
            }

            .title-before {
                display: none;
            }

            .menu-active {
                .title-before {
                    display: block;
                    width: 100% !important;
                }
            }

            .button-solicite-orcamento {
                background: transparent;
                border: 1px solid primaryColor;
                color: primaryColor;

                &:hover {
                    background: linear-gradient(90deg, rgba(33, 140, 154, 1) 0%, rgba(93, 197, 209, 1) 100%);
                    color: branco;
                }
            }

            .divisor-link-nav {
                background: #edf2f7;
                width: 1px;
                height: 15px;
                margin-top: -27px;
                float: right;
                display: block;
            }

            .divisor-c-drop {
                margin-right: -10px;
            }
        }
    }

    /* Small only */
    @media screen and (min-width: 320px) and (max-width: 63.9375em) {
        padding-top: 17px;
        padding-bottom: 0px;
        height: 110px;

        .container-header {
            max-width: 100% !important;
            padding-left: 24px;
            padding-right: 30px;
        }

        .button {
            width: 100%;
        }

        .button-solicite-orcamento {
            margin-top: 22px;
        }

        .dropdown-toggle::after {
